<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_reviews"
        android:textSize="@dimen/reviews_title_text_size"
        android:layout_marginStart="@dimen/reviews_title_margin_horizontal"
        android:layout_marginEnd="@dimen/reviews_title_margin_horizontal"
        android:layout_marginTop="@dimen/reviews_title_margin_vertical"
        android:textColor="@color/md_grey_300"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movie_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/reviews_title_margin_vertical"
        android:layout_marginBottom="@dimen/reviews_title_margin_vertical"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_reviews_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_error_message_text_size"
        android:paddingStart="@dimen/activity_error_padding_horizontal"
        android:paddingEnd="@dimen/activity_error_padding_horizontal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/reviews_error_margin_vertical"
        android:layout_marginBottom="@dimen/reviews_error_margin_vertical"
        android:visibility="gone"/>

    <ProgressBar
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/reviews_progress_margin_vertical"
        android:layout_marginBottom="@dimen/reviews_progress_margin_vertical"
        android:id="@+id/pb_loading_reviews"/>

</LinearLayout>