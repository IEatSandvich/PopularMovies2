<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/review_item_padding_horizontal"
    android:paddingEnd="@dimen/review_item_padding_horizontal"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/review_content_text_size"
        android:textColor="@color/md_grey_200"/>

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/review_author_margin_vertical"
        android:layout_marginEnd="@dimen/review_author_margin_horizontal"
        android:gravity="end"
        android:textSize="@dimen/review_author_text_size"
        android:textColor="@color/md_grey_200"
        android:textStyle="italic|bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/review_line_height"
        android:layout_marginTop="@dimen/review_line_margin_vertical"
        android:background="@color/md_grey_500"
        android:alpha="0.5"/>

</LinearLayout>